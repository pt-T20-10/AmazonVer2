@model IEnumerable<AmazonWebsite.Areas.Admin.Models.Delegation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DelegationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Validation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DelegationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Validation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.StaffId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DelegationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DelegationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DelegationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
