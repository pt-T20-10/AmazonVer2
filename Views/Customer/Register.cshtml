@model AmazonWebsite.ViewModels.RegisterVM
@{
    ViewData["title"] = "Register";
    Layout = "_CustomerLayout";
} 

<div class="container-fluid py-5 " style="margin-top:150px">
    <div class="container py-5">
        <h1 class="mb-4">Register</h1>
        <form asp-action="Register" asp-controller ="Customer" >
            <div class="row">
                <div class="col-md-12 col-lg-6">
                  <div class="form-item w-100">
                    <label asp-for="@Model.CustomerId" class="form-label my-3">User name<sup>*</sup></label>
                    <input asp-for="@Model.CustomerId" type="text" class="form-control">
                    <span asp-validation-for="@Model.CustomerId" class="text-danger"></span>
                    </div>
                 </div>
                  <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                        <label  asp-for="@Model.Password" class="form-label my-3">Password<sup>*</sup></label>
                            <input asp-for="@Model.Password"  class="form-control">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                  </div>
            </div>

            <div class="form-item">
                <label asp-for="@Model.Name" class="form-label my-3">Full name<sup>*</sup></label>
                <input asp-for="@Model.Name"  class="form-control">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            @* <div class="form-check my-3">
                <input asp-for="Sex" type="radio" class="form-check-input" value="Male" id="Male">
                <label class="form-check-label" for="Male">Male</label>
            </div>
            <div class="form-check my-3">
                <input asp-for="Sex" type="radio" class="form-check-input" value="Female" id="Female">
                <label class="form-check-label" for="Female">Female</label>
            </div> *@
            <div class="form-item">
                <label asp-for="@Model.DateOfBirth" class="form-label my-3">Date of birth<sup>*</sup></label>
                <input asp-for="@Model.DateOfBirth" type="date" class="form-control">
                <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-item">
                <label asp-for="@Model.Address" class="form-label my-3">Address<sup>*</sup></label>
                <input asp-for="@Model.Address" type="text"  class="form-control">
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <div class="form-item">
                <label asp-for="@Model.PhoneNumbers" class="form-label my-3">Phone<sup>*</sup></label>
                <input asp-for="@Model.PhoneNumbers"  class="form-control">
                <span asp-validation-for="@Model.PhoneNumbers" class="text-danger"></span>
            </div>
            <div class="form-item">
                <label asp-for="@Model.Email" class="form-label my-3">Email<sup>*</sup></label>
                <input asp-for="@Model.Email" type="email" class="form-control">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Register</button>
            </div>
        </form>
      </div>
                     
                    
 </div>
