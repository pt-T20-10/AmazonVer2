@{
    Layout = "_CustomerLayout";
}


@RenderSection("ShopNav", required: false)
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row g-4">
                    <div class="col-xl-3">
                        <div class="input-group w-100 mx-auto d-flex">
                          @await Html.PartialAsync("SearchPanel")
                        </div>
                    </div>
                    <div class="col-6"></div>
                   
                </div>
                <div class="row g-4">
                    <div class="col-lg-3">
                        <div class="row g-4">
                            @await Component.InvokeAsync("ProductType")
                     
                    
                            <div class="col-lg-12">
                                <div class="position-relative">
                                    <img src="~/hinh/hinh/hanghoa/plain-hooded-fleece-sweatshirt-teal.jpg" class="img-fluid rounded" alt="" />
                                    <div class="position-absolute">
                                        <h3 class="text-secondary fw-bold">Best Product Banner</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>  
                    <div class="col-lg-9">
                        <div class="row g-4 justify-content-center">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

