@model IEnumerable<AmazonWebsite.ViewModels.ProductTypeVM>


 
<div class="col-lg-12">
    <div class="mb-3">
        <h4>Categories</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="CustomerProduct" asp-action="Index" asp-route-id="@item.ProductTypeID">
                            <i class="fas me-2"></i>@item.ProductTypeName
                        </a>
                        <span>(@item.TypeQuantity)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
